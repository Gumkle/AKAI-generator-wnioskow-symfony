<div>

    {% if errors is iterable %}
    {% for error in errors %}

        <div class="notification is-warning has-text-centered">
            {{ error.message }}

        </div>

    {% endfor %}
    {% endif %}
    {{ form_start(form) }}
    <h2 class="subtitle has-text-centered">Dane koła</h2>
    <div class="field">
        <label class="label">Przewodniczący koła naukowego:</label>
        <div class="control">
            {{ form_widget(form.leader, {'attr': {'class': 'input'}}) }}

        </div>

    </div>
    <div class="field">
        <label class="label">Nazwa koła naukowego (np. <span class="is-italic">Akademickie Koło Aplikacji Internetowych</span>):</label>
        <div class="select">
            {{ form_widget(form.clubname, {
                'attr': {
                    'class': 'select',
                    'placeholder': 'np.: Akademickie koło aplikacji internetowych'
                }
            }) }}

        </div>
    </div>
    <div class="field">
        <label class="label">Nazwa wydziału:</label>
        <div class="select">
            {{ form_widget(form.department, {
                'attr': {
                    'class': 'select',
                    'placeholder': 'np.: Informatyki i Telekomunikacji'
                }
            }) }}
        </div>
    </div>
    <div class="field">
        <label class="label">Opiekun koła (wraz z tytułem/tytułami):</label>
        <div class="control">
            {{ form_widget(form.patron, {'attr': {'class': 'input'}}) }}
        </div>
    </div>
    <div class="share_link">
        <a id="link"
           title="Skopiuj link z polami przewodniczący, nazwa koła, nazwa wydziału i opiekun koła uzupełnionymi w ten sam sposób.">Skopiuj
            link do formularza z uzupełnionymi danymi koła</a>
    </div>

    <h2 class="subtitle has-text-centered">Dane indywidualne</h2>
    <div class="field">
        <label class="label">Imię i nazwisko:</label>
        <div class="control">
            {{ form_widget(form.name_surname, {'attr': {'class': 'input'}}) }}
        </div>
    </div>
    <div class="field">
        <label class="label">Indeks:</label>
        <div class="control">
            {{ form_widget(form.album_number, {'attr': {'class': 'input'}}) }}
        </div>
    </div>
    <div class="field">
        <label class="label">Funkcja:</label>
        <div class="control">
            {{ form_widget(form.function, {'attr': {'class': 'input'}}) }}
        </div>
    </div>

    <div class="field is-grouped is-grouped-left">
        <div class="field">
            <label class="label">Rok:</label>
            <div class="select">
                {{ form_widget(form.year, {
                    'attr': {
                        'class': 'select',
                        'placeholder': 'Wybierz rok członkowstwa'
                    }
                }) }}
            </div>
        </div>
        <div class="field">
            <label class="label"> Semestr:</label>
            <div class="select">
                {{
                form_widget(form.semester, {
                    'attr': {
                        'class': 'select',
                        'placeholder': 'Wybierz semestr członkowstwa'
                    }
                })
                }}
            </div>
        </div>
    </div>

    <div class="block">
        <label class="label">Działania w trakcie podanego semestru: </label>
        <ul id="achievements-list">
        </ul>
        <div class="has-text-right">
            <button id="add-achievement-button" class="button" type="button">Dodaj osiągnięcie</button>
        </div>
    </div>

    <div class="field">
        <div class="control`">
            <button class="button is-fullwidth">
                Wygeneruj
            </button>
        </div>
    </div>
    {# {{ include('loading.html.twig') }} #}
    {{ form_widget(form._token) }}
    {{ form_end(form, {render_rest: false}) }}
</div>